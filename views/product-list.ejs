<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet">
</head>

<body>
<div class="container mt-4">
    <p><h2>Product List</h2></p>
    <p><a href="/add" method="POST" class="btn btn-light">Add</a></p>
    <p><a href="/login" method="POST" class="btn btn-light">logout</a></p>
    <p><a href="/index" method="POST" class="btn btn-light">HomePage</a></p>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>ID Product</th>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Image</th>
            <th>Describe</th>
        </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < product.length; i++) {%>
                <tr>
                    <td><%=product[i].id%></td>
                    <td><%=product[i].product_name%></td>
                    <td><%=product[i].brand_name%></td>
                    <td><%=product[i].price%></td>
                    <td><%=product[i].image%></td>
                    <td><%=product[i].description%></td>
                    <td>
                        <a href="/edit" class="fa-solid fa-pen"></a> |
                        <a onClick="return confirm('Are you sure you want to delete?')" class="fa-solid fa-trash"></a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
</body>
</html>
